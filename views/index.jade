extends layout

block content
  div(class='container')
    h1= title
    div(class='row')
      div(class='col-xs-4')
        input(
        id='itemName'
        type='text'
        placeholder='Item name'
        )
    div(class='row')
      div(class='col-xs-4')
        input(
        id='itemPrice'
        type='text'
        placeholder='Item price'
        )
    div(class='row')
      div(class='col-xs-4')
        input(
        id='addItemBtn'
        type='button'
        value='Add item'
        )
    div(class='row')
      div(class='col-xs-4')
        span(id='messageLabel')
    div(id='items')
  script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
  script(src='/javascripts/global.js')



